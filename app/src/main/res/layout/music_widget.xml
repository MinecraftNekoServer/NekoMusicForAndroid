<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="16dp">

    <!-- 歌曲信息 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/widget_song_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Neko云音乐"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/widget_artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无播放"
            android:textSize="13sp"
            android:textColor="#E0E0E0"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="4dp"
            android:textAlignment="center" />
    </LinearLayout>

    <!-- 进度条 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/widget_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:textSize="11sp"
            android:textColor="#E0E0E0"
            android:layout_marginEnd="8dp" />

        <ProgressBar
            android:id="@+id/widget_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="1"
            android:progress="0"
            android:max="100"
            android:progressTint="#FFFFFF"
            android:progressBackgroundTint="#60FFFFFF" />

        <TextView
            android:id="@+id/widget_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:textSize="11sp"
            android:textColor="#E0E0E0"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- 播放控制按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- 上一曲 -->
        <ImageButton
            android:id="@+id/widget_previous"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_widget_previous"
            android:background="@android:color/transparent"
            android:contentDescription="上一曲"
            android:scaleType="centerInside"
            android:padding="10dp" />

        <!-- 播放/暂停 -->
        <ImageButton
            android:id="@+id/widget_play_pause"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/ic_widget_play"
            android:background="@android:color/transparent"
            android:contentDescription="播放/暂停"
            android:scaleType="centerInside"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:padding="12dp" />

        <!-- 下一曲 -->
        <ImageButton
            android:id="@+id/widget_next"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_widget_next"
            android:background="@android:color/transparent"
            android:contentDescription="下一曲"
            android:scaleType="centerInside"
            android:padding="10dp" />
    </LinearLayout>
</LinearLayout>