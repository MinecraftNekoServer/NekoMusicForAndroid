<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/float_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/widget_background"
    android:padding="8dp"
    android:gravity="center_vertical"
    android:clickable="true"
    android:focusable="false">

    <!-- 音乐封面 -->
    <ImageView
        android:id="@+id/float_cover"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        android:clickable="true"
        android:focusable="true" />

    <!-- 歌曲信息 -->
    <LinearLayout
        android:id="@+id/float_info_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/float_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Neko云音乐"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:maxWidth="150dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:clickable="false"
            android:focusable="false" />

        <TextView
            android:id="@+id/float_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无播放"
            android:textColor="#CCCCCC"
            android:textSize="13sp"
            android:maxWidth="150dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:clickable="false"
            android:focusable="false" />
    </LinearLayout>

    <!-- 播放动画 -->
    <com.neko.music.floatwindow.PlayAnimationView
        android:id="@+id/float_play_animation"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:visibility="invisible"
        android:clickable="false"
        android:focusable="false" />

    <!-- 控制按钮 -->
    <LinearLayout
        android:id="@+id/float_controls_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:clickable="false"
        android:focusable="false">

        <ImageButton
            android:id="@+id/float_previous"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_widget_previous"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true" />

        <ImageButton
            android:id="@+id/float_play_pause"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_widget_play"
            android:background="@android:color/transparent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true" />

        <ImageButton
            android:id="@+id/float_next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_widget_next"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>
</LinearLayout>